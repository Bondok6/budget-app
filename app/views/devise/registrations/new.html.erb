<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>

  <header style="background-color: #3772c2">
    <nav class="navbar">
      <div class="container-fluid d-flex align-items-center">
        <%= link_to root_path do %>
          <%= image_tag "left-arrow.svg", width: '30'%> 
        <% end %>
        <h4 class="text-white">REGISTER</h4>
          <%= f.submit "NEXT", class: "text-white btn" %>
      </div>
    </nav>  
  </header>

  <section class="container mt-5 d-flex flex-column gap-3">
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, autocomplete: "name", class: "form-control", placeholder: "Full Name" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Repeat Password" %>
    </div>
  </section>

<% end %>